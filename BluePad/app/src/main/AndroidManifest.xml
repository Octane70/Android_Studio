<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blueapp.octane.bluepad">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_bluepad"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bluepad"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Devices"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Dpad"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".CameraView"
            android:theme="@style/AppTheme.SlidrActivityTheme"></activity>
    </application>



</manifest>